<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puzzle.Game">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.4puzzleGame">
        <activity android:name=".lyUi.GameActivity" />
        <activity android:name=".lyUi.StartGameActivity" />
        <activity android:name=".lyUi.SelectPictureActivity" />
        <activity android:name=".lyUi.SelectDificultyActivity" />
        <activity android:name=".lyUi.GameStopActivity" />
        <activity android:name=".lyUi.NamePlayerActivity" />
        <activity
            android:name=".lyUi.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.4puzzleGame.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>