<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.4puzzleGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sec_azul</item>
        <item name="colorPrimaryVariant">@color/main_azul</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_azul</item>
        <item name="colorSecondaryVariant">@color/sec_azul</item>
        <item name="colorOnSecondary">@color/main_azul</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:buttonStyle" >@style/Theme.4puzzleGame.Button</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.4puzzleGame.SimpleText" parent="Theme.4puzzleGame" >
        <item name="android:fontFamily">@font/mainfont_bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/main_azul</item>
    </style>

    <style name="Theme.4puzzleGame.inputText" parent="Theme.4puzzleGame" >
        <item name="android:textColorHighlight">@color/bg_azul</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/sec_azul</item>
        <item name="colorControlHighlight">@color/main_azul</item>
        <item name="android:fontFamily">@font/mainfont_regular</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/main_azul</item>
        <item name="android:strokeWidth">2</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="android:radius">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>


    <style name="Theme.4puzzleGame.Button" parent="Theme.4puzzleGame" >
        <item name="colorPrimary">@color/main_azul</item>
        <item name="android:background" >@drawable/btn_oscuro</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="fontFamily">@font/mainfont_bold</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="Theme.4puzzleGame.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.4puzzleGame.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.4puzzleGame.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>